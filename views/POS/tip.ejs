<% layout('layouts/boilerplate') %>
    <div class="col-6 offset-4 border ">
        <div class="col text-center">
            <div class="mb-5">
                <h2><strong>Your total is: $<%= itemTotal%1==0 ? `${itemTotal}.00`: itemTotal %>
                    </strong></h2>
            </div>
            <div class="mb-5">
                <h4>Would You Like to Add a Tip?</h4>
            </div>
            <% let x=[5,10,15,20] %>
                <div class="row align-items-center justify-content-center">
                    <% for(value of x){ %>
                        <div class=" col px-1 mb-3">
                            <form action="/sales" method="POST">
                                <input type="hidden" id="tip" name="tip" value=<%=value %>>

                                <button class="btn btn-primary btn-lg">
                                    $<%=value %>
                                </button>
                            </form>
                        </div>
                        <% } %>
                            <div class="mb-5">
                                <form action="/sales" method="POST">
                                    <label for="tip" class="form-label mb-1">Custom Tip Amount:</label>
                                    <input type="number" id="tip" name="tip" class="form-control mb-3"
                                        placeholder="0.00">
                                    <div class="align-items-center">
                                        <button class="btn btn-primary btn-md">Submit Custom Tip</button>
                                    </div>
                                </form>
                            </div>
                            <div class="mb-3">
                                <form action="/sales" method="POST">
                                    <input type="hidden" id="tip" name="tip" value=0>

                                    <button class="btn btn-danger btn-sm">No Tip</button>
                                </form>
                            </div>
                </div>
        </div>
    </div>